""""""""""""""""""""""""""""""""""" custom """""""""""""""""""""""""""""""""""""

augroup autospell
  autocmd FileType markdown,vimwiki setlocal spelllang=ru,en spell
augroup END

function YaPaste() range
  echo system('echo '.shellescape(join(getline(a:firstline, a:lastline), "\n")).'| ya paste | ya notify')
endfunction

vnoremap <silent> <leader>y :call YaPaste()<cr>
noremap <silent> <leader>ss :setlocal spelllang=ru,en spell<CR>
noremap <silent> <leader>sn :setlocal nospell<CR>

if has('nvim')

lua << EOF
    local home_dir = os.getenv("HOME")
    package.path = home_dir .. "/dotfiles2.0/vim/lua/?.lua;" .. package.path
    require('custom')
EOF

    set nofoldenable
    set foldmethod=expr
    set foldexpr=nvim_treesitter#foldexpr()
endif

