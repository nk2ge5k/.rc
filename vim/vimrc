let g:vimwiki_folding = 'custom'
let g:vimwiki_list = [{
    \ 'path': g:note_dir,
    \ 'syntax': 'markdown',
    \ 'ext': '.md',
    \ 'nested_syntaxes': {
        \ 'go': 'go',
        \ 'json': 'json',
        \ 'php': 'php',
        \ 'c': 'c',
        \ 'cpp': 'cpp'
    \ },
    \ }]

